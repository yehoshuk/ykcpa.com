{
  "size-scale": {
    "base": "1rem",
    "300": "0.8rem",
    "500": "1.25rem",
    "600": "1.56rem",
    "700": "1.95rem",
    "800": "2.44rem",
    "900": "3.05rem",
    "max": "4rem"
  },
"colors": {
  "primary": "#4a90e2",          // lighter, friendly blue
  "primary-shade": "#357ab8",    // medium blue for hover/dark mode
  "primary-glare": "#b3d4fc",    // pale blue for light accents
  "highlight": "#fff3b0",        // soft buttery yellow
  "light": "#ffffff",            // stays the same
  "mid": "#e0e0e0",              // light gray for dividers
  "dark": "#666666",             // softer dark for text
  "slate": "#999999"             // for secondary text, borders
},
  "fonts": {
    "base": "\"-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'\"",
    "serif": "\"'Lora', serif\""
  }
}
